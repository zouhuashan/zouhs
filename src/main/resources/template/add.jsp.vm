<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta charset="utf-8" />
    <title>新增${table.entityName.toLowerCase()}</title>

    <meta name="description" content="Dynamic tables and grids using jqGrid plugin" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0" />

<\#include "../../common/header.ftl"/>
</head>

<body class="no-skin">
<div class="page-content">
    <div class="row">
        <div class="col-xs-12">
            <!-- PAGE CONTENT BEGINS -->
            <form class="form-horizontal" role="form" id="saveForm">
#foreach($field in ${table.fields})
    #if(!${field.propertyName.equals("id")})
                <div class="form-group">
                    <label class="col-sm-3 control-label no-padding-right" for="form-field-1"> ${field.comment} </label>
        #if(!${field.propertyType.equals("Date")})
                    <div class="col-sm-9">
                        <input type="text" id="${field.propertyName}" placeholder="请输入${field.comment}" name="${field.propertyName}" class="required col-xs-10 col-sm-5"   />
                    </div>
        #end
        #if(${field.propertyType.equals("Date")})
                    <div class="col-sm-9">
                        <input type="text" id="${field.propertyName}" placeholder="请输入${field.comment}" name="${field.propertyName}" class=" required col-xs-10 col-sm-5"    onClick="WdatePicker();" />

                    </div>
        #end
                </div>
  #end
#end


                <div class="clearfix ">
                    <div class="col-md-offset-3 col-md-9">
                        <button class="btn btn-white btn-info btn-sm btn-bold"  type="reset" id="reset_btn">
                            <i class="ace-icon fa fa-undo bigger-120"></i>
                            关闭
                        </button>
                        &nbsp; &nbsp; &nbsp;
                        <button class="btn  btn-white btn-info btn-sm btn-bold" type="button" id="save_btn">
                            <i class="ace-icon fa fa-check bigger-120 blue"></i>
                            保存
                        </button>
                    </div>
                </div>

            </form>


        </div><!-- /.col -->
    </div><!-- /.row -->

</div>
<\#include "../../common/footer.ftl"/>
<!-- inline scripts related to this page -->
<script type="text/javascript">

    jQuery(function($) {

        //保存
        var saveUrl = "${request.contextPath}/admin/${table.entityName.toLowerCase()}/save";
        $("#save_btn").click(function(){
        if($('#saveForm').valid()){
            $.post(saveUrl, $("#saveForm").serialize(),function(result){
                if(result == 'true' || result == true) {
                    swal({
                        text: "保存成功!",
                        button: "确定"
                    }).then(function(){
                        parent.refreshGrid();
                        //当你在iframe页面关闭自身时
                        var index = parent.layer.getFrameIndex(window.name); //先得到当前iframe层的索引
                        parent.layer.close(index); //再执行关闭
                    });
                }else{
                    swal({
                        text: "保存失败!",
                        button: "确定"
                    });
                }
            });
            }
         });

        $("#reset_btn").click(function(){
            var index = parent.layer.getFrameIndex(window.name); //先得到当前iframe层的索引
            parent.layer.close(index); //再执行关闭
        });
    });


</script>

</body>
</html>
